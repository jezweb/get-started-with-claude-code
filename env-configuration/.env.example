# ==============================================
# EXAMPLE ENV CONFIGURATION
# Safe to commit - contains only dummy values
# ==============================================
# Copy this file to .env and replace with real values
# This file shows the structure without exposing secrets

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME="My AI Application"
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# ==============================================
# GOOGLE GEMINI API (Primary)
# ==============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=gsk_1234567890abcdefghijklmnopqrstuvwxyz

# Model: gemini-2.5-flash, gemini-2.5-pro, gemini-2.5-flash-lite
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# ==============================================
# CHAT CONFIGURATION
# ==============================================
CHAT_MODEL=gemini-2.5-flash
CHAT_TEMPERATURE=0.7
CHAT_MAX_TOKENS=1000

# ==============================================
# DOCUMENT GENERATION
# ==============================================
DOC_MODEL=gemini-2.5-pro
DOC_TEMPERATURE=0.5
DOC_MAX_TOKENS=4000

# ==============================================
# FALLBACK MODELS (Optional)
# ==============================================
# Anthropic Claude
CLAUDE_API_KEY=sk-ant-api03-1234567890abcdefghijklmnopqrstuvwxyz

# OpenAI
OPENAI_API_KEY=sk-1234567890abcdefghijklmnopqrstuvwxyz

# ==============================================
# DATABASE
# ==============================================
DATABASE_URL=sqlite:///./app.db

# ==============================================
# SECURITY
# ==============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-replace-this-1234567890abcdef
JWT_SECRET_KEY=your-jwt-secret-replace-this-1234567890

# ==============================================
# CORS
# ==============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ==============================================
# FILE PATHS
# ==============================================
UPLOAD_DIR=./uploads
LOG_DIR=./logs
TEMP_DIR=/tmp

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_CHAT_ENABLED=true
FEATURE_DOCUMENT_GENERATION=true
FEATURE_DOCUMENT_ANALYSIS=true

# ==============================================
# NOTES FOR DEVELOPERS
# ==============================================
# 1. Copy this file to .env
# 2. Replace all dummy values with real ones
# 3. Never commit the .env file
# 4. Use different keys for dev/staging/production
# 5. Rotate API keys every 90 days
# ==============================================