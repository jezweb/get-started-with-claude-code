# ==============================================
# COMPLETE ENV CONFIGURATION
# Advanced multi-model AI application setup
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git!

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME="Advanced AI Platform"
APP_ENV=development  # development, staging, production
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
APP_VERSION=1.0.0

# ==============================================
# PRIMARY AI PROVIDER - GOOGLE GEMINI
# ==============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Default Gemini Configuration
AI_DEFAULT_PROVIDER=gemini
GEMINI_DEFAULT_MODEL=gemini-2.5-flash
GEMINI_DEFAULT_TEMPERATURE=0.7
GEMINI_DEFAULT_MAX_TOKENS=1000

# ==============================================
# USE CASE: CHAT/CONVERSATION
# ==============================================
# Optimized for interactive dialogue
CHAT_PROVIDER=gemini
CHAT_MODEL=gemini-2.5-flash  # Balanced performance
CHAT_TEMPERATURE=0.7          # Natural conversation
CHAT_MAX_TOKENS=1000
CHAT_TOP_P=0.9
CHAT_TOP_K=40
CHAT_FREQUENCY_PENALTY=0.0
CHAT_PRESENCE_PENALTY=0.0
CHAT_THINKING_MODE=false      # Quick responses
CHAT_STREAMING=true
CHAT_TIMEOUT=30

# ==============================================
# USE CASE: DOCUMENT GENERATION
# ==============================================
# For creating long-form content
DOC_PROVIDER=gemini
DOC_MODEL=gemini-2.5-pro      # Best quality
DOC_TEMPERATURE=0.5           # Balanced creativity
DOC_MAX_TOKENS=4000
DOC_TOP_P=0.95
DOC_THINKING_MODE=true        # Better structure
DOC_ENABLE_CITATIONS=true
DOC_OUTPUT_FORMAT=markdown

# ==============================================
# USE CASE: DOCUMENT ANALYSIS
# ==============================================
# For reading and understanding documents
ANALYSIS_PROVIDER=gemini
ANALYSIS_MODEL=gemini-2.5-pro  # Multimodal support
ANALYSIS_TEMPERATURE=0.2       # Factual accuracy
ANALYSIS_MAX_TOKENS=2000
ANALYSIS_ENABLE_PDF=true
ANALYSIS_ENABLE_VISION=true
ANALYSIS_ENABLE_AUDIO=true
ANALYSIS_ENABLE_VIDEO=true
ANALYSIS_CHUNK_SIZE=1000
ANALYSIS_OVERLAP_SIZE=200

# ==============================================
# USE CASE: REAL-TIME/LOW LATENCY
# ==============================================
# For instant responses
REALTIME_PROVIDER=gemini
REALTIME_MODEL=gemini-2.5-flash-lite  # Fastest
REALTIME_TEMPERATURE=0.5
REALTIME_MAX_TOKENS=500
REALTIME_TIMEOUT_MS=5000
REALTIME_CACHE_ENABLED=true
REALTIME_CACHE_TTL=300

# ==============================================
# USE CASE: CODE GENERATION
# ==============================================
CODE_PROVIDER=gemini
CODE_MODEL=gemini-2.5-pro     # Complex reasoning
CODE_TEMPERATURE=0.1          # Precise output
CODE_MAX_TOKENS=3000
CODE_THINKING_MODE=true       # Better logic
CODE_LANGUAGE_HINTS=python,javascript,typescript

# ==============================================
# USE CASE: CREATIVE WRITING
# ==============================================
CREATIVE_PROVIDER=gemini
CREATIVE_MODEL=gemini-2.5-flash
CREATIVE_TEMPERATURE=0.9      # High creativity
CREATIVE_MAX_TOKENS=2000
CREATIVE_TOP_P=0.95
CREATIVE_TOP_K=50

# ==============================================
# USE CASE: EMBEDDINGS
# ==============================================
EMBED_PROVIDER=gemini
EMBED_MODEL=models/text-embedding-004
EMBED_DIMENSION=768
EMBED_BATCH_SIZE=100
EMBED_TASK_TYPE=retrieval_document

# ==============================================
# USE CASE: TEXT TO SPEECH
# ==============================================
# Using Google Cloud TTS or ElevenLabs
TTS_PROVIDER=google
TTS_API_KEY=your-tts-api-key-here
TTS_VOICE=en-US-Neural2-J
TTS_SPEAKING_RATE=1.0
TTS_PITCH=0.0
TTS_VOLUME_GAIN_DB=0.0
TTS_AUDIO_FORMAT=mp3

# ==============================================
# FALLBACK MODELS
# ==============================================
# Primary fallback (Anthropic Claude)
CLAUDE_API_KEY=your-claude-api-key-here
FALLBACK_PROVIDER_1=claude
FALLBACK_MODEL_1=claude-3-5-sonnet-20240620
FALLBACK_TEMPERATURE_1=0.7

# Secondary fallback (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
FALLBACK_PROVIDER_2=openai
FALLBACK_MODEL_2=gpt-4-turbo
FALLBACK_TEMPERATURE_2=0.7

# Fallback configuration
ENABLE_FALLBACK=true
FALLBACK_ON_RATE_LIMIT=true
FALLBACK_ON_ERROR=true
FALLBACK_ON_TIMEOUT=true
MAX_FALLBACK_ATTEMPTS=3
FALLBACK_DELAY_MS=1000

# ==============================================
# COST MANAGEMENT
# ==============================================
# Model selection by cost tier
ECONOMY_MODEL=gemini-2.5-flash-lite
STANDARD_MODEL=gemini-2.5-flash
PREMIUM_MODEL=gemini-2.5-pro

# Cost limits
COST_TRACKING_ENABLED=true
COST_LIMIT_PER_REQUEST=0.10
COST_LIMIT_PER_USER_DAILY=10.00
COST_LIMIT_TOTAL_DAILY=1000.00
COST_WARNING_THRESHOLD=0.8

# Automatic downgrade
ENABLE_MODEL_DOWNGRADE=true
DOWNGRADE_AFTER_TOKENS=10000
DOWNGRADE_ON_COST_LIMIT=true

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Primary database
DATABASE_URL=sqlite:///./app.db
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis cache (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false
CACHE_TTL_DEFAULT=3600

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================
# Secret keys
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# JWT settings
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Security
API_KEY_HEADER=X-API-Key
REQUIRE_API_KEY=true
ALLOWED_API_KEYS=["key1","key2"]

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE"]
CORS_ALLOW_HEADERS=["*"]

# ==============================================
# RATE LIMITING & QUOTAS
# ==============================================
# Global rate limits
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_STRATEGY=sliding_window

# Per-user limits
USER_RATE_LIMIT_REQUESTS=50
USER_RATE_LIMIT_WINDOW=3600
USER_DAILY_TOKEN_LIMIT=100000

# Model-specific limits
CHAT_RATE_LIMIT=60
DOC_RATE_LIMIT=10
ANALYSIS_RATE_LIMIT=20

# ==============================================
# FILE HANDLING
# ==============================================
# Upload settings
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=52428800  # 50MB
UPLOAD_ALLOWED_EXTENSIONS=[".pdf",".docx",".txt",".md",".csv"]
UPLOAD_SCAN_FOR_VIRUS=true

# Temporary files
TEMP_DIR=/tmp
TEMP_FILE_CLEANUP_HOURS=24

# Static files
STATIC_DIR=./static
MEDIA_DIR=./media

# ==============================================
# LOGGING & MONITORING
# ==============================================
# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, plain
LOG_DIR=./logs
LOG_FILE_NAME=app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_INCLUDE_TIMESTAMP=true

# Performance monitoring
ENABLE_APM=true
APM_SERVICE_NAME=ai-platform
APM_ENVIRONMENT=development

# Error tracking (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ==============================================
# BACKGROUND JOBS
# ==============================================
# Celery configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_TIME_LIMIT=300
CELERY_TASK_SOFT_TIME_LIMIT=240

# ==============================================
# WEBHOOKS & INTEGRATIONS
# ==============================================
# Webhook configuration
WEBHOOK_ENABLED=true
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_RETRY_COUNT=3
WEBHOOK_TIMEOUT=10

# Slack integration
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#ai-notifications
SLACK_USERNAME=AI-Bot

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_CHAT_ENABLED=true
FEATURE_DOCUMENT_GENERATION=true
FEATURE_DOCUMENT_ANALYSIS=true
FEATURE_CODE_GENERATION=true
FEATURE_EMBEDDINGS=true
FEATURE_TTS=true
FEATURE_BETA_FEATURES=false

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Hot reload
DEV_HOT_RELOAD=true
DEV_RELOAD_DIRS=["./src","./templates"]

# Debug toolbar
DEBUG_TOOLBAR_ENABLED=true
DEBUG_SHOW_SQL_QUERIES=true
DEBUG_SHOW_API_CALLS=true

# Testing
TEST_MODE=false
TEST_DATABASE_URL=sqlite:///./test.db
TEST_DISABLE_RATE_LIMIT=true