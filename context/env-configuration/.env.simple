# ==============================================
# SIMPLE ENV CONFIGURATION
# For basic AI-powered applications
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git!

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME="My AI Application"
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# ==============================================
# GOOGLE GEMINI API (Primary AI Provider)
# ==============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Model Selection (as of July 2025)
# - gemini-2.5-flash: Best price-performance (recommended)
# - gemini-2.5-pro: Most powerful, complex reasoning
# - gemini-2.5-flash-lite: Lowest cost, fastest response
GEMINI_MODEL=gemini-2.5-flash

# Model Parameters
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000
GEMINI_TOP_P=0.95
GEMINI_THINKING_MODE=false

# ==============================================
# DATABASE
# ==============================================
# SQLite for simple deployments
DATABASE_URL=sqlite:///./app.db
DATABASE_ECHO=false

# ==============================================
# SECURITY
# ==============================================
# Generate a secure secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
JWT_EXPIRATION=3600

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ==============================================
# BASIC LIMITS
# ==============================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Request limits
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760  # 10MB

# ==============================================
# FILE PATHS
# ==============================================
UPLOAD_DIR=./uploads
LOG_DIR=./logs
TEMP_DIR=/tmp

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json